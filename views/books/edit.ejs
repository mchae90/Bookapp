<% include ../partials/header %>

<form action="/books/<%= book[0].item.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="id">ID</label>
    <input type="text" class="form-control" id="id" value="<%= book[0].item.id %>" name="book[id]">
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" value="<%= book[0].item.title %>" name="book[title]">
  </div>   
  <div class="form-group">
    <label for="subtitle">Subtitle</label>
    <input type="text" class="form-control" id="subtitle" value="<%= book[0].item.subtitle %>" name="book[subtitle]">
  </div>
  <div class="form-group">
    <label for="author">Author</label>
    <input type="text" class="form-control" id="author" value="<%= book[0].item.authors %>" name="book[authors]">
  </div>
  <div class="form-group">
    <label for="review">Review</label>
    <textarea class="form-control" id="review" rows="3" name="book[review]"><%= book[0].item.review %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% include ../partials/footer %>