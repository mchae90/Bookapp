<div class="container edit-wrap">
<form action="/books/<%= book_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
  <h1>Edit Comment</h1>
  <div class="form-group comment-edit-box">
    <textarea rows="8" type="text" class="form-control" name="comment[text]"><%= comment.text %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

